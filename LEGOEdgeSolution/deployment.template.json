{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "legopiregistery": {
                "username": "$CONTAINER_REGISTRY_USERNAME_legopiregistery",
                "password": "$CONTAINER_REGISTRY_PASSWORD_legopiregistery",
                "address": "legopiregistery.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "env": {
              "storageFolder": {
                "value": "/home/pi/images/"
              }
            },
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {
                "HostConfig": {
                  "Binds": [
                    "/home/pi/images/:/home/pi/images/"
                  ],
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "storageFolder": {
                "value": "/home/pi/images/"
              }
            },
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "Binds": [
                    "/home/pi/images/:/home/pi/images/"
                  ],
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "DeviceCheckModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "storageFolder": {
                "value": "/home/pi/images/"
              }
            },
            "settings": {
              "image": "${MODULES.DeviceCheckModule}",
              "createOptions": {
                "HostConfig": {
                  "Binds": [
                    "/home/pi/images/:/home/pi/images/"
                  ],
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          },
          "CameraModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "VIDEO_PATH": {
                "value": "0"
              },
              "IMAGE_PROCESSING_ENDPOINT": {
                "value": ""
              },
              "RESIZE_WIDTH": {
                "value": "800"
              },
              "RESIZE_HEIGHT": {
                "value": "600"
              },
              "SHOW_VIDEO": {
                "value": "True"
              }
            },
            "settings": {
              "image": "${MODULES.CameraModule}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5012/tcp": [
                      {
                        "HostPort": "5012"
                      }
                    ]
                  },
                  "Binds": [
                    "/dev/video0:/dev/video0"
                  ],
                  "Devices": [
                    {
                      "PathOnHost": "/dev/video0",
                      "PathInContainer": "/dev/video0",
                      "CgroupPermissions": "mrw"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "DeviceCheckModuleToIoTHub": "FROM /messages/modules/DeviceCheckModule/outputs/* INTO $upstream",
          "CameraModuleToIoTHub": "FROM /messages/modules/CameraModule/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}